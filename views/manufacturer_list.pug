extends layout

block content
  div(class="flex justify-center items-center")
     a(href='/catalog/manufacturer/add' 
     class="flex items-center justify-center text-green-700 my-5 border-green-700 border-2 pr-2 pl-3 py-1 hover:border-green-600 hover:text-green-600") Add Manufacturer
      span(class="material-icons ml-1" aria-hidden="true") add

  div(class="my-0 mx-auto flex justify-center flex-col px-10 max-w-screen-sm")
    h1(class="text-center font-bold text-3xl my-5") #{title}
  
    div(class="flex flex-col")
      each company in manufacturer_list
        a(href=company.url 
        class="font-bold text-center text-gray-500 mt-2 border-2 px-2 py-1 hover:border-gray-600") #{company.title}
      else 
        h1 There are no Manufacturers