extends layout

block content

  form(class='px-16 max-w-screen-sm my-0 mx-auto' method='POST' action='')
    h1(class="font-bold text-center text-2xl py-5") #{synth.name}

    div
      input#synthid.form-control(type='hidden',name='synthid', required='true', value=synth._id )

      label(for="password") Enter secret password to delete this synthesizer: 
      input(class="mt-1 appearance-none border-2 border-gray-200 w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" 
      type="password" name="password" required='true' placeholder="Password")  
              
    div(class="flex justify-center") 
      button(class="w-full flex items-center justify-center text-red-600 border-red-600 mt-2 border-2 px-2 py-1 hover:border-red-500 hover:text-red-500"  
      type='submit') Delete
        span(class="material-icons mx-1" aria-hidden="true") clear   